<div id="chatDiv">
  <h4>Users Who Are Online</h4>
  <ul id="users"></ul>

  <h4>Chat Room</h4>
  <ul id="messages"></ul>

  <ul id="typingStatus"></ul>

<h4>Personal Message</h4>
<ul id="personal"></ul>

</div>

<div id="joinDiv">
  <form action="">
    <input id="name" placeholder="Your Name" autocomplete="off" />
    <button id='join'>Join</button>
  </form>
</div>

<div id="messageDiv">
  <form action="">
    <input id="m" autocomplete="off" />
    <button id='send'>Send</button>
  </form>
</div>
